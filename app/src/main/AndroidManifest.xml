<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prj1.stand.artworldviewer">

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/artworldviewer"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/artworldviewer_ro"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.ArtGalleryActivity"
            android:label="@string/title_activity_art_gallery"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:authorities="com.prj1.stand.artworldviewer"
            android:name=".data.DbProvider"
            android:exported="false"
            android:syncable="true" />

        <service
            android:name=".services.ArtTokenService"
            android:exported="false" />

        <service
            android:name=".services.AllModelService"
            android:exported="false" />

        <service
            android:name=".services.GenesService"
            android:exported="false" />

        <service
            android:name=".services.GeneSingleService"
            android:exported="false" />

        <service
            android:name=".services.ArtistsService"
            android:exported="false" />

        <service
            android:name=".services.ArtistSingleService"
            android:exported="false" />

        <service
            android:name=".services.ArtworksService"
            android:exported="false" />

        <service
            android:name=".services.ArtworkSingleService"
            android:exported="false" />

        <service
            android:name=".services.FairsService"
            android:exported="false" />

        <service
            android:name=".services.FairSingleService"
            android:exported="false"/>

        <service
            android:name=".services.ShowsService"
            android:exported="false" />

        <service
            android:name=".services.ShowSingleService"
            android:exported="false" />

        <receiver
            android:name=".sync.StartReceiver"
            android:exported="false" />
    </application>
</manifest>