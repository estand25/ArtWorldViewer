<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorLTGray"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="8dp"
      android:id="@+id/relativeLout">

    <TextView
        android:id="@+id/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <ImageButton
        android:id="@+id/right_imageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@android:drawable/ic_media_next"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/page_number"
        android:layout_alignBottom="@+id/page_number"/>

    <ImageButton
        android:id="@+id/left_imageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="102dp"
        app:srcCompat="@android:drawable/ic_media_previous"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/section_title"
        android:layout_alignBottom="@+id/page_number"/>

    <EditText
        android:id="@+id/page_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textIsSelectable="true"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_toEndOf="@+id/left_imageButton"
        android:layout_centerInParent="true"/>

</RelativeLayout>