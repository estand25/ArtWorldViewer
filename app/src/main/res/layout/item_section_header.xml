<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorDarkGray"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="8dp"
      android:id="@+id/relativeLout">

    <TextView
        android:id="@+id/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/displaySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:popupBackground="@color/colorDarkGray"/>

    <ImageButton
        android:id="@+id/right_imageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@android:drawable/ic_media_next"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/page_number"/>

    <ImageButton
        android:id="@+id/left_imageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="102dp"
        app:srcCompat="@android:drawable/ic_media_previous"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/section_title"/>

    <EditText
        android:id="@+id/page_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/left_imageButton"
        android:layout_alignBottom="@+id/displaySpinner"/>

</RelativeLayout>